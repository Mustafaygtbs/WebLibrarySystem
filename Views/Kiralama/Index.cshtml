@model List<Kiralama>


@if (TempData["Basarili"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Basarili"]
    </div>
}
@if (TempData["HataEkle"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["HataEkle"]
    </div>
}

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col">
            <h3 class="display-4">Kitap Kiralamaları</h3>
            <p class="lead">Veritabanındaki mevcut kitap kiralamalar listelenmektedir.</p>
        </div>
        <div class="col text-right align-self-center">
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-success btn-lg" type="button">Yeni Kiralama Kaydı Ekle</a>
        </div>
    </div>

    <table class="table table-hover table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Öğrenci Id</th>
                <th scope="col">Kitap Adı:</th>
                <th scope="col" colspan="2">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kiralama in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(modelItem => kiralama.Id)</td>*@
                    <td>@kiralama.Id</td>
                    <td>@kiralama.OgrenciId</td>
                    <td>@kiralama.Kitap.KitapAdi</td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" type="button" class="btn btn-outline-primary btn-sm">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
