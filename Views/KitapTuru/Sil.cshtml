@model KitapTuru

<form method="post">
    <input asp-for="Id" hidden/>@*Id ismini kullandigimiz için otomatik olarak asp gonderiyor ama yine de eklemek icin ya da farklı bir isim kullanilirsa bu sekilde gonderebilirsiniz.*@
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Kitap Türü Sil</h3>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label>Kitap Türü Adı:</label>
                            <input asp-for="Ad" disabled class="form-control" placeholder="Kitap türü adı" />                          
                            @*hata mesajını span ile ekledi.*@
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">Kitap Türü Sil</button>
                            <a asp-controller="KitapTuru" asp-action="Index" class="btn btn-secondary">Kitap Türlerine Geri Dön</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
